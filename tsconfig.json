{
	"files": [],
	"compilerOptions": {
		"target": "es2021",
		"lib": ["es2021"],
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	]
}
